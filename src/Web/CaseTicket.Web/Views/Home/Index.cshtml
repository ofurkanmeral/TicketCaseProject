@{
    Layout = null;
}
@model List<CaseTicket.Domain.Entities.CityList>

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Otobüs Bileti Arama</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.css" />
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link href="/css/index.css" rel="stylesheet" />

</head>
<body class="bg-light">

    <form method="post" action="/Home/List">
        <div class="container mt-5">
            <div class="search-box mx-auto">

                <div class="search-item">
                    <p class="text-muted small">Nereden</p>
                    <select class="js-example-basic-single origin" name="Origin">
                        >
                        @foreach (var item in Model)
                        {
                            <option value="@item.CityId">@item.CityName</option>
                        }

                    </select>
                    <input type="hidden" id="OriginName" name="OriginName" />
                </div>

                <div class="icon changeCity" style="width: 4%; height: 4%;">
                    <img style="width: 100%; height: 100%;" src="/image/sync.png" />
                </div>

                <div class="search-item">
                    <p class="text-muted small">Nereye</p>
                    <select class="js-example-basic-single destination" name="Destination">
                        >
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            bool isSelected = (i == 2);
                            <option value="@Model[i].CityId" selected="@(isSelected ? "selected" : null)">
                                @Model[i].CityName
                            </option>
                        }
                        <input type="hidden" id="DestinationName" name="DestinationName" />
                    </select>

                </div>

                <div class="search-item">
                    <p class="text-muted small">Gidiş Tarihi</p>
                    <input type="text" name="TravelDate" class="form-control">
                </div>

                <div class="d-flex align-items-center gap-3">
                    <label class="form-check-label">
                        <input type="radio" name="date" class="form-check-input today">
                        Bugün
                    </label>
                    <label class="form-check-label">
                        <input type="radio" name="date" class="form-check-input tomorrow">
                        Yarın
                    </label>
                </div>

                <button class="btn-search searchButton">
                    Otobüs Ara
                </button>
            </div>

        </div>
    </form>

    <script type="text/javascript" src="https://cdn.jsdelivr.net/jquery/latest/jquery.min.js"></script>   
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/momentjs/latest/moment.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/moment/locale/tr.js"></script> 
    <script src="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
     <script src="~/js/index.js"></script>
</body>
</html>
